local uis = game:GetService("UserInputService")

coroutine.wrap(function()
    while true and task.wait(0.001) do
        for _, player in pairs(game:GetService('Players'):GetPlayers()) do
            if player.Name ~= game:GetService('Players').LocalPlayer.Name and player.Character.Humanoid.Health < 21 then
                local rightArm = player.Character:WaitForChild("Right Arm")
                local leftArm = player.Character:WaitForChild("Left Arm")

                -- Modify right arm
                rightArm.Size = Vector3.new(2, 2, 1)
                rightArm.Transparency = 0
                rightArm.CanCollide = false

                -- Modify left arm
                leftArm.Size = Vector3.new(1, 2, 1)
                leftArm.Transparency = 0
                leftArm.CanCollide = false
            end
        end
    end
end)()

local function onInputBegan(input, typing)
    if typing then return end

    if input.KeyCode == Enum.KeyCode.T then
        game.StarterGui:SetCore("SendNotification", {Title="HBE"; Text="ON!!"; Duration=2.5;})
        for _, player in pairs(game:GetService('Players'):GetPlayers()) do
            if player.Name ~= game:GetService('Players').LocalPlayer.Name then
                local rightArm = player.Character:WaitForChild("Right Arm")
                local leftArm = player.Character:WaitForChild("Left Arm")

                -- Modify right arm
                rightArm.Size = Vector3.new(5, 2, 6)
                rightArm.Transparency = 0.8
                rightArm.CanCollide = false

                -- Modify left arm
                leftArm.Size = Vector3.new(5, 2, 6)
                leftArm.Transparency = 0.8
                leftArm.CanCollide = false
            end
        end
    elseif input.KeyCode == Enum.KeyCode.Y then
        game.StarterGui:SetCore("SendNotification", {Title="HBE"; Text="OFF!!"; Duration=2.5;})
        for _, player in pairs(game:GetService('Players'):GetPlayers()) do
            if player.Name ~= game:GetService('Players').LocalPlayer.Name then
                local rightArm = player.Character:WaitForChild("Right Arm")
                local leftArm = player.Character:WaitForChild("Left Arm")

                -- Modify right arm
                rightArm.Size = Vector3.new(4, 2, 4)
                rightArm.Transparency = 0
                rightArm.CanCollide = false

                -- Modify left arm
                leftArm.Size = Vector3.new(4, 2, 4)
                leftArm.Transparency = 0
                leftArm.CanCollide = false
            end
        end
    end
end

uis.InputBegan:Connect(onInputBegan)
